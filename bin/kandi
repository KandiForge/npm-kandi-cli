#!/usr/bin/env node

const { spawn } = require('child_process');
const path = require('path');
const fs = require('fs');

// Path to the actual binary (will be downloaded during install)
const binaryPath = path.join(__dirname, 'kandi');

// Check if binary exists
if (!fs.existsSync(binaryPath)) {
  console.error('Error: Kandi CLI binary not found.');
  console.error('Please reinstall the package: npm install -g kandi-cli');
  process.exit(1);
}

// Spawn the binary with all arguments
const child = spawn(binaryPath, process.argv.slice(2), {
  stdio: 'inherit',
  env: process.env
});

// Handle exit
child.on('exit', (code) => {
  process.exit(code || 0);
});

// Handle errors
child.on('error', (err) => {
  console.error('Failed to start Kandi CLI:', err.message);
  process.exit(1);
});